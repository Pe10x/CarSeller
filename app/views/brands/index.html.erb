<center><h1>Marcas</h1></center>

<table class="table table-hover table striped">
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
  </tr>

<% @brands.each do |brand| %>
  <tr class="success">
    <td><%= link_to brand.name, brand %>(<%= brand.total_vehicles %>)</td>
    <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
    <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to icon('plus')+'Nueva Marca', new_brand_path, class: 'btn btn-succes' %>
